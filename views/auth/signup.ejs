<%- include('../includes/head.ejs') %>
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <div class="container">
                <%- include('../includes/errors.ejs') %>
                <form action="/signup" method="POST" class="mt-5 text-center">
                    <div class="form-group row">
                        
                        <input type="hidden" name="_csrf" value="<%= csrfToken%>">

                        <label for="email" class="col-12 col-lg-2 col-form-label">E-mail</label>
                        <div class="col-12 col-lg-10 mb-4">
                            <input type="text" name="email" class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : ''%>" placeholder="esam@example.com" id="email" value="<%= oldInput.email%>">
                        </div>

                        <label for="password" class="col-12 col-lg-2 col-form-label">Password</label>
                        <div class="col-12 col-lg-10 mb-4">
                            <input type="password" name="password" class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : ''%>" placeholder="*********" id="password">
                        </div>

                        <label for="confirm-password" class="col-12 col-lg-2 col-form-label">Confirme Password</label>
                        <div class="col-12 col-lg-10 mb-4">
                            <input type="password" name="confirmPassword" class="form-control <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : ''%>" placeholder="*********" id="confirm-password">
                        </div>

                    </div>
                    <button class="btn btn-primary" type="submit">Signup</button>
                </form>
            </div>
        </main>
<%- include('../includes/end.ejs') %>