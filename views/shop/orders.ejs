<%- include('../includes/head.ejs') %>
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <div class="container">
                <div class="row mt-5 mx-auto col-8">
                    <% if(orders.length > 0) {%>
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Product</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% orders.forEach(order => {%>
                                    <tr>
                                        <td> <%= order._id %> - <a href="/orders/<%=order.id%>" class="btn btn-primary">Invoice</a></td>
                                        <td>
                                            <% order.products.forEach(p => {%>
                                                <p><%= p.product.title%> (<%= p.quantity%>)</p>
                                            <% });%>
                                        </td>
                                    </tr>
                                <% });%> 
                            </tbody>
                        </table>
                    <%} else {%>
                        <p>No orders available</p>
                    <% } %>
                </div>
            </div>
        </main>
<%- include('../includes/end.ejs') %>
